<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="316dp"
        android:layout_height="107dp"
        android:layout_marginBottom="580dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/myimage" />

    <EditText
        android:id="@+id/et_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/et_pw3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_id2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_id2"
        app:layout_constraintTop_toBottomOf="@+id/et_id2" />

    <Button
        android:id="@+id/btn_idpw"
        android:layout_width="87dp"
        android:layout_height="43dp"
        android:layout_marginTop="72dp"
        android:text="ID PW찾기"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/et_pw3"
        app:layout_constraintHorizontal_bias="0.991"
        app:layout_constraintStart_toStartOf="@+id/et_pw3"
        app:layout_constraintTop_toBottomOf="@+id/et_pw3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="210dp"
        android:layout_height="83dp"
        android:layout_marginTop="510dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/myimage" />

    <Button
        android:id="@+id/btn_reglster2"
        android:layout_width="87dp"
        android:layout_height="43dp"
        android:layout_marginTop="72dp"
        android:text="회원가입"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/et_pw3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_pw3"
        app:layout_constraintTop_toBottomOf="@+id/et_pw3" />

    <Button
        android:id="@+id/btn_rogin2"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="로그인"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pw3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="310dp"
        android:layout_height="75dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="LOL.GG는 처음이신가요? 처음이시라면 아래에 회원가입 버튼을 통해 회원가입을 하실 수 있습니다."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>